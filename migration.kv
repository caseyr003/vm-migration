        BoxLayout:
            id: title_box
            orientation: 'vertical'
            height: '54dp'
            size_hint_y: None
            padding: ['30dp', '20dp', '30dp', '20dp']
            spacing: '20dp'
            Label:
                text: 'Oracle Cloud Infrastructure Accounts'
                bold: True
                font_size: '28dp'
                color: [0.02, 0.45, 0.81, 1]

        # BoxLayout:
        #     id: no_accounts_box
