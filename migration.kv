            padding: ['0dp', '20dp', '16dp', '10dp']
            size: ('100sp','100sp')
            size_hint: (None, None)
            Image:
                id: status_box
                source: 'data/status/failed.png'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: root.vm_name
                size_hint: [1, 0.33]
                text_size: self.size
                font_size: '28sp'
                bold: True
                color: [0.02, 0.45, 0.81, 1]
            BoxLayout:
                orientation: 'vertical'
                size_hint: [1, 0.67]
                Label:
                    id: vm_label
                    text: root.vm_status
                    text_size: self.size
                    font_size: '20sp'
                    bold: True
                    color: [90/255.0, 90/255.0, 90/255.0, 1]
                Label:
                    text: root.vm_ip
                    text_size: self.size
                    bold: True
                    color: [90/255.0, 90/255.0, 90/255.0, 1]
                Label:
                    text: root.vm_ocid
                    text_size: self.size
                    color: [90/255.0, 90/255.0, 90/255.0, 1]

    BoxLayout:
        orientation: 'vertical'
        size_hint: [1, 0.1]
        canvas:
            Color:
                rgba: [240/255.0, 240/255.0, 240/255.0, 1]
