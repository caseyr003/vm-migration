#:kivy 1.7.1
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import Factory kivy.factory.Factory
#:import SlideTransition kivy.uix.screenmanager.FadeTransition
#:import label kivy.uix.label
#:import sla kivy.adapters.simplelistadapter
#:import partial functools.partial
#:import Clipboard kivy.core.clipboard.Clipboard

## Screen Manager
ScreenManagement:
    transition: SlideTransition()
    AddAccountScreen:
    VMScreen:
    AddImageScreen:
    AddVMScreen:
    Accounts:
    HelpScreen:


<Screen>:
    canvas:
        Color:
            rgba: [240/255.0, 240/255.0, 240/255.0, 1]
        Rectangle:
            size: self.size

## Nav Bar
<NavBar@BoxLayout>:
    orientation: 'horizontal'
    size_hint_y: None
    height: '54dp'
    padding: '8dp'

    Image:
        source: 'data/logo.png'

    Label:
        text: ''
    Label:
        text: ''


## Custom Widgets
<InputLabel@Label>:
    text_size: self.size
    color: [90/255.0, 90/255.0, 90/255.0, 1]

<InputText@TextInput>:
    color: [90/255.0, 90/255.0, 90/255.0, 1]
    background_color: [1, 1, 1, 1]
    multiline: False

<NavButton@Button>:
    color: [90/255.0, 90/255.0, 90/255.0, 1]
    background_color: [240/255.0, 240/255.0, 240/255.0, 0.3]

<SaveButton@Button>:
    color: [1, 1, 1, 1]
    background_color: [0.290, 0.670, 0.992, 1]

## Dropdowns
<BucketDropdown>:
    bucket_box: bucket_box
    bucket_button: bucket_button
    BoxLayout:
        id: bucket_box
        orientation: 'vertical'
        InputLabel:
            text: 'Select Object Storage Bucket'
        Button:
            id: bucket_button
            disabled: True
            text: '-'

<CompartmentDropdown>:
    compartment_box: compartment_box
    compartment_button: compartment_button
    BoxLayout:
        id: compartment_box
        orientation: 'vertical'
        InputLabel:
            text: 'Select Compartment'
        Button:
            id: compartment_button
            disabled: True
            text: '-'

<AvailabilityDomainDropdown>:
    availability_domain_box: availability_domain_box
    availability_domain_button: availability_domain_button
    BoxLayout:
        id: availability_domain_box
        orientation: 'vertical'
        InputLabel:
            text: 'Select Availability Domain'
        Button:
            id: availability_domain_button
            disabled: True
            text: '-'

<VirtualCloudNetworkDropdown>:
    vcn_box: vcn_box
    vcn_button: vcn_button
    BoxLayout:
        id: vcn_box
        orientation: 'vertical'
        InputLabel:
            text: 'Select Virtual Cloud Network'
        Button:
            id: vcn_button
            disabled: True
            text: '-'

<SubnetDropdown>:
    subnet_box: subnet_box
    subnet_button: subnet_button
    BoxLayout:
        id: subnet_box
        orientation: 'vertical'
        InputLabel:
            text: 'Select Subnet'
        Button:
            id: subnet_button
            disabled: True
            text: '-'

<ShapeDropdown>:
    shape_box: shape_box
    shape_button: shape_button
    BoxLayout:
        id: shape_box
        orientation: 'vertical'
        InputLabel:
            text: 'Select Shape'
        Button:
            id: shape_button
            disabled: True
            text: '-'


## FileChoosers
<ImageFileChooser>:
    file_btn: file_btn
    BoxLayout:
        orientation: 'vertical'
        InputLabel:
            text: 'VMDK or QCOW2 file'
        Button:
            id: file_btn
            text: 'Choose File'
            on_release: root.show_load()

<KeyFileChooser>:
    file_btn: file_btn
    BoxLayout:
        orientation: 'vertical'
        InputLabel:
            text: 'Choose Private Key File'
        Button:
            id: file_btn
            text: 'Choose File'
            on_release: root.show_load()

## Loading Popups
<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            size_hint: [1, 0.92]

        BoxLayout:
            size_hint: [1, 0.08]
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Choose"
                on_release: root.load(filechooser.path, filechooser.selection)

<LoadingPopup>:
    popup_container: popup_container
    popup_label: popup_label
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        BoxLayout:
            id: popup_container
            orientation: "vertical"
            Label:
                id: popup_label
                text: 'Loading...'
                font_size: '20dp'


## Screens

<Accounts>:
    name: 'account'
    title_box: title_box
    # no_accounts_box: no_accounts_box
    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '54dp'
            padding: '8dp'

            Image:
                source: 'data/logo.png'
                size_hint: [0.25, 1]

            Label:
                text: ''
                size_hint: [0.3, 1]

            BoxLayout:
                size_hint: [0.45, 1]
                BoxLayout:
                    padding: [0, 0, 10, 0]
                    size_hint: [0.35, 1]
                    Button:
                        text: 'Help'
                        bold: True
                        width: self.width
                        on_release: app.get_help()
                BoxLayout:
                    size_hint: [0.65, 1]
                    Button:
                        text: 'Add OCI Account'
                        bold: True
                        width: self.width
                        on_release: app.add_account()

        BoxLayout:
            id: title_box
            orientation: 'vertical'
            height: '54dp'
            size_hint_y: None
            padding: ['30dp', '20dp', '30dp', '20dp']
            spacing: '20dp'
            Label:
                text: 'Oracle Cloud Infrastructure Accounts'
                bold: True
                font_size: '28dp'
                color: [0.02, 0.45, 0.81, 1]

        # BoxLayout:
        #     id: no_accounts_box
        #     orientation: 'vertical'
        #     height: '120dp'
        #     size_hint_y: None
        #     padding: '14sp'
        #     canvas:
        #         Color:
        #             rgba: [1,1,1,1]
        #         Rectangle:
        #             size: self.size
        #             pos: self.pos
        #     Label:
        #         text: 'No Accounts'
        #         font_size: '28dp'
        #         color: [0.2, 0.2, 0.2, 1]
        #     Label:
        #         text: 'Please add an Oracle Cloud Infrastructure Account'
        #         font_size: '20dp'
        #         color: [0.4, 0.4, 0.4, 1]

        ListView:

            adapter: ListAdapter(data=root.data, cls=Factory.AccountListItem, args_converter=root.args_converter)

<AccountListItem>:
    height: '200sp'
    size_hint_y: None
    orientation: 'vertical'
    canvas:
        Color:
            rgba: [1,1,1,1]
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        padding: ['30dp', '20dp', '30dp', '20dp']
        size_hint: [1, 0.9]
        Label:
            text: root.account_name
            text_size: self.size
            font_size: '28sp'
            bold: True
            color: [0/255.0, 168/255.0, 28/255.0, 1]
            size_hint: [1, 0.2]

        BoxLayout:
            size_hint: [1, 0.46]
            orientation: 'vertical'
            Label:
                text: root.account_region
                text_size: self.size
                font_size: '20sp'
                bold: True
                color: [90/255.0, 90/255.0, 90/255.0, 1]
            Label:
                text: root.account_tenancy
                text_size: self.size
                color: [90/255.0, 90/255.0, 90/255.0, 1]

            Label:
                text: root.account_user
                text_size: self.size
                color: [90/255.0, 90/255.0, 90/255.0, 1]

        BoxLayout:
            padding: 0, 10, 0, 0
            size_hint: [1, 0.34]
            Button:
                text: 'Go to Account'
                bold: True
                on_release: root.account_details()
    BoxLayout:
        orientation: 'vertical'
        size_hint: [1, 0.1]
        canvas:
            Color:
                rgba: [240/255.0, 240/255.0, 240/255.0, 1]
            Rectangle:
                size: self.size
                pos: self.pos

<VMListItem>:
    vm_label: vm_label
    height: '140sp'
    size_hint_y: None
    orientation: 'vertical'
    canvas:
        Color:
            rgba: [1,1,1,1]
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        size_hint: [1, 0.9]
        padding: ['30dp', '20dp', '30dp', '20dp']
        Label:
            text: root.vm_name
            size_hint: [1, 0.33]
            text_size: self.size
            font_size: '28sp'
            bold: True
            color: [0.02, 0.45, 0.81, 1]
        BoxLayout:
            orientation: 'vertical'
            size_hint: [1, 0.67]
            Label:
                id: vm_label
                text: root.vm_status
                text_size: self.size
                font_size: '20sp'
                bold: True
                color: [90/255.0, 90/255.0, 90/255.0, 1]
            Label:
                text: root.vm_ip
                text_size: self.size
                bold: True
                color: [90/255.0, 90/255.0, 90/255.0, 1]
            Label:
                text: root.vm_ocid
                text_size: self.size
                color: [90/255.0, 90/255.0, 90/255.0, 1]

    BoxLayout:
        orientation: 'vertical'
        size_hint: [1, 0.1]
        canvas:
            Color:
                rgba: [240/255.0, 240/255.0, 240/255.0, 1]
            Rectangle:
                size: self.size
                pos: self.pos


<AddAccountScreen>:
    name: 'add_account'
    display_name_input: display_name_input
    tenancy_ocid_input: tenancy_ocid_input
    user_ocid_input: user_ocid_input
    region_input: region_input
    fingerprint_input: fingerprint_input
    key_chooser: key_chooser
    BoxLayout:
        padding: '18dp'
        orientation: 'vertical'
        NavBar:

            BoxLayout:

                Button:
                    text: 'Cancel'
                    width: self.width
                    on_release: root.cancel()

        BoxLayout:
            orientation: 'vertical'
            spacing: '5dp'

            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Oracle Cloud Infrastructure Account'
                    font_size: '22dp'
                    color: [.3, .3, .3, 1]

            BoxLayout:
                orientation: 'vertical'
                InputLabel:
                    text: 'Name (display name for account)'
                InputText:
                    id: display_name_input
                    text: ''
            BoxLayout:
                orientation: 'vertical'
                InputLabel:
                    text: 'Tenancy OCID'
                InputText:
                    id: tenancy_ocid_input
                    text: ''
            BoxLayout:
                orientation: 'vertical'
                InputLabel:
                    text: 'User OCID'
                InputText:
                    id: user_ocid_input
                    text: ''
            BoxLayout:
                orientation: 'vertical'
                InputLabel:
                    text: 'Region'
                InputText:
                    id: region_input
                    text: ''
            BoxLayout:
                orientation: 'vertical'
                InputLabel:
                    text: 'Fingerprint'
                InputText:
                    id: fingerprint_input
                    text: ''

            KeyFileChooser:
                id: key_chooser

            BoxLayout:
                orientation: 'vertical'
                padding: [0, 16, 0, 0]
                SaveButton:
                    text: 'Save'
                    on_release: root.save_account()

<VMScreen>:
    name: 'vm'
    account_title: account_title
    title_box: title_box
    # no_vms_box: no_vms_box
    # main_layout: main_layout
    BoxLayout:
        id: main_layout
        orientation: 'vertical'
        padding: '20dp'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '54dp'
            padding: '8dp'

            Image:
                source: 'data/logo.png'
                size_hint: [0.25, 1]

            Label:
                text: ''
                size_hint: [0.2, 1]

            BoxLayout:
                size_hint: [0.55, 1]
                BoxLayout:
                    padding: [0, 0, 10, 0]
                    size_hint: [0.25, 1]
                    Button:
                        text: 'Back'
                        width: self.width
                        on_release: app.view_accounts()
                BoxLayout:
                    padding: [0, 0, 10, 0]
                    size_hint: [0.25, 1]
                    Button:
                        text: 'Refresh'
                        width: self.width
                        on_release: root.refresh()
                BoxLayout:
                    size_hint: [0.5, 1]
                    Button:
                        text: 'Migrate New VM'
                        width: self.width
                        on_release: root.add_vm()

        BoxLayout:
            orientation: 'vertical'
            height: '54dp'
            size_hint_y: None
            id: title_box
            Label:
                id: account_title
                text: "Tenancy"
                bold: True
                font_size: '28dp'
                color: [0.02, 0.45, 0.81, 1]

        ListView:
            adapter: ListAdapter(data=root.data, cls=Factory.VMListItem, args_converter=root.args_converter)


<AddImageScreen>:
    name: 'add_image'
    id: add_image_screen
    custom_image_name: custom_image_name
    compartment_dropdown: compartment_dropdown
    bucket_dropdown: bucket_dropdown
    image_chooser: image_chooser
    BoxLayout:
        padding: '18dp'
        orientation: 'vertical'
        NavBar:

            BoxLayout:

                Button:
                    text: 'Cancel'
                    width: self.width
                    on_release: app.cancel_image()

        BoxLayout:
            orientation: 'vertical'
            spacing: '5dp'

            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Image Details'
                    font_size: '22dp'
                    color: [.3, .3, .3, 1]

            ImageFileChooser:
                id: image_chooser

            CompartmentDropdown:
                id: compartment_dropdown
            BucketDropdown:
                id: bucket_dropdown
            BoxLayout:
                orientation: 'vertical'
                InputLabel:
                    text: 'Name for custom image'
                InputText:
                    id: custom_image_name
                    text: ''


            BoxLayout:
                orientation: 'vertical'
                padding: [0, 16, 0, 0]
                SaveButton:
                    text: 'Next'
                    on_release: root.add_vm()

<AddVMScreen>:
    name: 'add_vm'
    launch_vm_switch: launch_vm_switch
    ad_dropdown: ad_dropdown
    vcn_dropdown: vcn_dropdown
    subnet_dropdown: subnet_dropdown
    shape_dropdown: shape_dropdown

    BoxLayout:
        padding: '18dp'
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '54dp'
            padding: '8dp'

            Image:
                source: 'data/logo.png'
                size_hint: [0.25, 1]

            Label:
                text: ''
                size_hint: [0.3, 1]

            BoxLayout:
                size_hint: [0.45, 1]
                BoxLayout:
                    padding: [0, 0, 10, 0]
                    size_hint: [0.4, 1]
                    Button:
                        text: 'Back'
                        width: self.width
                        on_release: app.back_vm()
                BoxLayout:
                    size_hint: [0.6, 1]
                    Button:
                        text: 'Cancel'
                        width: self.width
                        on_release: app.cancel_vm()

        BoxLayout:
            orientation: 'vertical'
            spacing: '5dp'

            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Virtual Machine Details'
                    font_size: '22dp'
                    color: [.3, .3, .3, 1]

            BoxLayout:
                orientation: 'vertical'
                InputLabel:
                    text: 'Launch VM with Image'
                Switch:
                    id: launch_vm_switch

            AvailabilityDomainDropdown:
                id: ad_dropdown
                disabled: not root.launch_with_vm

            ShapeDropdown:
                id: shape_dropdown
                disabled: not root.launch_with_vm

            VirtualCloudNetworkDropdown:
                id: vcn_dropdown
                disabled: not root.launch_with_vm

            SubnetDropdown:
                id: subnet_dropdown
                disabled: not root.launch_with_vm

            BoxLayout:
                orientation: 'vertical'
                padding: [0, 16, 0, 0]
                SaveButton:
                    text: 'Launch'
                    on_release: root.launch()

<HelpScreen>:
    name: 'help_screen'
    carousel: carousel
    prev_btn: prev_btn
    next_btn: next_btn

    BoxLayout:
        padding: '18dp'
        orientation: 'vertical'
        NavBar:
            BoxLayout:
                Button:
                    text: 'Cancel'
                    width: self.width
                    on_release: app.view_accounts()

        BoxLayout:
            orientation: 'vertical'
            spacing: '5dp'

            BoxLayout:
                orientation: 'vertical'
                padding: [0, 16, 0, 0]
                size_hint: [1, 0.9]
                Carousel:
                    id: carousel

            BoxLayout:
                orientation: 'horizontal'
                padding: [0, 16, 0, 0]
                size_hint: [1, 0.1]
                Button:
                    id: prev_btn
                    text: 'Previous'
                    disabled: True
                    on_release: root.previous()
                Button:
                    id: next_btn
                    text: 'Next'
                    on_release: root.next()
