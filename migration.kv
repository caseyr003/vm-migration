                    rgba: [1,1,1,1]
                Rectangle:
                    size: self.size
                    pos: self.pos

            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Oracle Cloud Infrastructure Account'
                    font_size: '24dp'
                    bold: True
                    color: [0.02, 0.45, 0.81, 1]

            BoxLayout:
                orientation: 'vertical'
                InputLabel:
                    text: 'Name (display name for account)'
