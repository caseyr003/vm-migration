#:kivy 1.7.1
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import Factory kivy.factory.Factory
#:import SlideTransition kivy.uix.screenmanager.FadeTransition
#:import label kivy.uix.label
#:import sla kivy.adapters.simplelistadapter
#:import partial functools.partial
#:import Clipboard kivy.core.clipboard.Clipboard

## Screen Manager
ScreenManagement:
    transition: SlideTransition()
    AddAccountScreen:
    VMScreen:
    AddImageScreen:
    AddVMScreen:
    Accounts:
    HelpScreen:


<Screen>:
    canvas:
        Color:
            rgba: [240/255.0, 240/255.0, 240/255.0, 1]
        Rectangle:
            size: self.size

## Nav Bar
<NavBar@BoxLayout>:
    orientation: 'horizontal'
    size_hint_y: None
    height: '54dp'
    padding: '8dp'

    Image:
        source: 'data/logo.png'

    Label:
        text: ''
    Label:
        text: ''


## Custom Widgets
<InputLabel@Label>:
    text_size: self.size
    color: [90/255.0, 90/255.0, 90/255.0, 1]
    # bold: True

<InputText@TextInput>:
    color: [90/255.0, 90/255.0, 90/255.0, 1]
    background_color: (1,1,1,1) if self.focus else (1,1,1,1)
    border: (12, 12, 12, 12)
    multiline: False

<NavButton@Button>:
    color: [90/255.0, 90/255.0, 90/255.0, 1]
    background_color: [240/255.0, 240/255.0, 240/255.0, 0.3]

<SaveButton@Button>:
    color: [1, 1, 1, 1]
    background_color: [0.290, 0.670, 0.992, 1]

## Dropdowns
<BucketDropdown>:
    bucket_box: bucket_box
    bucket_button: bucket_button
    BoxLayout:
        id: bucket_box
        orientation: 'vertical'
        InputLabel:
            text: 'Select Object Storage Bucket'
        Button:
            id: bucket_button
            disabled: True
            bold: True
            text: '-'

<CompartmentDropdown>:
    compartment_box: compartment_box
    compartment_button: compartment_button
    BoxLayout:
        id: compartment_box
        orientation: 'vertical'
        InputLabel:
            text: 'Select Compartment'
        Button:
            id: compartment_button
            bold: True
            disabled: True
            text: '-'

<AvailabilityDomainDropdown>:
    availability_domain_box: availability_domain_box
    availability_domain_button: availability_domain_button
    BoxLayout:
        id: availability_domain_box
        orientation: 'vertical'
        InputLabel:
            text: 'Select Availability Domain'
        Button:
            id: availability_domain_button
            disabled: True
            bold: True
            text: '-'

<VirtualCloudNetworkDropdown>:
    vcn_box: vcn_box
    vcn_button: vcn_button
    BoxLayout:
        id: vcn_box
        orientation: 'vertical'
        InputLabel:
            text: 'Select Virtual Cloud Network'
        Button:
            id: vcn_button
            disabled: True
            bold: True
            text: '-'

<SubnetDropdown>:
    subnet_box: subnet_box
    subnet_button: subnet_button
    BoxLayout:
        id: subnet_box
        orientation: 'vertical'
        InputLabel:
            text: 'Select Subnet'
        Button:
            id: subnet_button
            disabled: True
            bold: True
            text: '-'

<ShapeDropdown>:
    shape_box: shape_box
    shape_button: shape_button
    BoxLayout:
        id: shape_box
        orientation: 'vertical'
        InputLabel:
            text: 'Select Shape'
        Button:
            id: shape_button
            disabled: True
            bold: True
            text: '-'


## FileChoosers
<ImageFileChooser>:
    file_btn: file_btn
    BoxLayout:
        orientation: 'vertical'
        InputLabel:
            text: 'VMDK or QCOW2 file'
        Button:
            id: file_btn
            text: 'Choose File'
            bold: True
            on_release: root.show_load()

<KeyFileChooser>:
    file_btn: file_btn
    BoxLayout:
        orientation: 'vertical'
        InputLabel:
            text: 'Choose Private Key File'
        Button:
            id: file_btn
            text: 'Choose File'
            bold: True
            on_release: root.show_load()

## Loading Popups
<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            size_hint: [1, 0.92]

        BoxLayout:
            size_hint: [1, 0.08]
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Choose"
                on_release: root.load(filechooser.path, filechooser.selection)

<LoadingPopup>:
    popup_container: popup_container
    popup_label: popup_label
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        BoxLayout:
            id: popup_container
            orientation: "vertical"
            Label:
                id: popup_label
                text: 'Loading...'
                font_size: '20dp'


## Screens

<Accounts>:
    name: 'account'
    title_box: title_box
    # no_accounts_box: no_accounts_box
    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '54dp'
            padding: '8dp'

            Image:
                source: 'data/logo.png'
                size_hint: [0.25, 1]

            Label:
                text: ''
                size_hint: [0.3, 1]

            BoxLayout:
                size_hint: [0.45, 1]
                BoxLayout:
                    padding: [0, 0, 10, 0]
                    size_hint: [0.35, 1]
                    Button:
                        text: 'Help'
                        bold: True
                        width: self.width
                        on_release: app.get_help()
                BoxLayout:
                    size_hint: [0.65, 1]
                    Button:
                        text: 'Add OCI Account'
