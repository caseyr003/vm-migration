        BoxLayout:
            orientation: 'vertical'
            height: '54dp'
            size_hint_y: None
            id: title_box
            Label:
                id: account_title
                text: "Tenancy"
                bold: True
                font_size: '28dp'
                color: [0.02, 0.45, 0.81, 1]

        ListView:
            adapter: ListAdapter(data=root.data, cls=Factory.VMListItem, args_converter=root.args_converter)


<AddImageScreen>:
    name: 'add_image'
    id: add_image_screen
    custom_image_name: custom_image_name
    compartment_dropdown: compartment_dropdown
    bucket_dropdown: bucket_dropdown
    image_chooser: image_chooser
    BoxLayout:
        padding: '18dp'
        orientation: 'vertical'
        NavBar:

            BoxLayout:

                Button:
                    text: 'Cancel'
                    bold: True
                    width: self.width
                    on_release: app.cancel_image()

        BoxLayout:
            orientation: 'vertical'
            spacing: '5dp'
            padding: ['20dp', '20dp', '20dp', '20dp']
            canvas:
                Color:
                    rgba: [1,1,1,1]
                Rectangle:
                    size: self.size
                    pos: self.pos

            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Image Details'
                    font_size: '24dp'
                    bold: True
                    color: [0.02, 0.45, 0.81, 1]

            ImageFileChooser:
                id: image_chooser

            CompartmentDropdown:
                id: compartment_dropdown
            BucketDropdown:
                id: bucket_dropdown
            BoxLayout:
                orientation: 'vertical'
                InputLabel:
                    text: 'Name for custom image'
                InputText:
                    id: custom_image_name
                    text: ''

            BoxLayout:
                orientation: 'vertical'
                padding: [0, 16, 0, 0]
                SaveButton:
                    text: 'Next'
                    bold: True
                    on_release: root.add_vm()

<AddVMScreen>:
    name: 'add_vm'
    launch_vm_switch: launch_vm_switch
    ad_dropdown: ad_dropdown
    vcn_dropdown: vcn_dropdown
    subnet_dropdown: subnet_dropdown
    shape_dropdown: shape_dropdown

    BoxLayout:
        padding: '18dp'
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '54dp'
            padding: '8dp'

            Image:
                source: 'data/logo.png'
                size_hint: [0.25, 1]

            Label:
                text: ''
                size_hint: [0.3, 1]

            BoxLayout:
                size_hint: [0.45, 1]
                BoxLayout:
                    padding: [0, 0, 10, 0]
                    size_hint: [0.4, 1]
                    Button:
                        text: 'Back'
                        bold: True
                        width: self.width
                        on_release: app.back_vm()
                BoxLayout:
                    size_hint: [0.6, 1]
                    Button:
                        text: 'Cancel'
                        bold: True
                        width: self.width
                        on_release: app.cancel_vm()

        BoxLayout:
            orientation: 'vertical'
            spacing: '5dp'
            padding: ['20dp', '20dp', '20dp', '20dp']
            canvas:
                Color:
                    rgba: [1,1,1,1]
                Rectangle:
                    size: self.size
                    pos: self.pos

            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Virtual Machine Details'
                    font_size: '24dp'
                    bold: True
                    color: [0.02, 0.45, 0.81, 1]

            BoxLayout:
                orientation: 'vertical'
                InputLabel:
                    text: 'Launch VM with Image'
                Switch:
                    id: launch_vm_switch

            AvailabilityDomainDropdown:
                id: ad_dropdown
                disabled: not root.launch_with_vm

            ShapeDropdown:
                id: shape_dropdown
                disabled: not root.launch_with_vm

            VirtualCloudNetworkDropdown:
                id: vcn_dropdown
                disabled: not root.launch_with_vm

            SubnetDropdown:
                id: subnet_dropdown
                disabled: not root.launch_with_vm

            BoxLayout:
                orientation: 'vertical'
                padding: [0, 16, 0, 0]
                SaveButton:
                    text: 'Launch'
                    bold: True
                    on_release: root.launch()

<HelpScreen>:
    name: 'help_screen'
    carousel: carousel
    prev_btn: prev_btn
    next_btn: next_btn

    BoxLayout:
        padding: '18dp'
        orientation: 'vertical'
        NavBar:
            BoxLayout:
                Button:
                    text: 'Close'
                    width: self.width
                    bold: True
                    on_release: app.view_accounts()

        BoxLayout:
            orientation: 'vertical'
            spacing: '5dp'

            BoxLayout:
                orientation: 'vertical'
                padding: [0, 16, 0, 0]
                size_hint: [1, 0.9]
                Carousel:
                    id: carousel

            BoxLayout:
                orientation: 'horizontal'
                padding: [0, 16, 0, 0]
                size_hint: [1, 0.1]
                Button:
                    id: prev_btn
                    text: 'Previous'
                    bold: True
                    disabled: True
                    background_color: [0.75, 0.75, 0.75, 1]
                    on_release: root.previous()
                Button:
                    id: next_btn
                    text: 'Next'
                    bold: True
                    background_color: [0.75, 0.75, 0.75, 1]
                    on_release: root.next()

