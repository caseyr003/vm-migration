            BoxLayout:
                orientation: 'vertical'
                InputLabel:
                    text: 'Tenancy OCID'
                InputText:
                    id: tenancy_ocid_input
                    text: ''
            BoxLayout:
                orientation: 'vertical'
                InputLabel:
                    text: 'User OCID'
                InputText:
                    id: user_ocid_input
                    text: ''
            BoxLayout:
                orientation: 'vertical'
                InputLabel:
                    text: 'Region'
                InputText:
                    id: region_input
                    text: ''
            BoxLayout:
                orientation: 'vertical'
                InputLabel:
                    text: 'Fingerprint'
                InputText:
                    id: fingerprint_input
                    text: ''

            KeyFileChooser:
                id: key_chooser

            BoxLayout:
                orientation: 'vertical'
                padding: [0, 16, 0, 0]
                SaveButton:
                    text: 'Save'
                    bold: True
                    on_release: root.save_account()

<VMScreen>:
    name: 'vm'
    account_title: account_title
    title_box: title_box
    # no_vms_box: no_vms_box
    # main_layout: main_layout
    BoxLayout:
        id: main_layout
        orientation: 'vertical'
        padding: '20dp'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '54dp'
            padding: '8dp'

            Image:
                source: 'data/logo.png'
                size_hint: [0.25, 1]

            Label:
                text: ''
                size_hint: [0.2, 1]

            BoxLayout:
                size_hint: [0.55, 1]
                BoxLayout:
                    padding: [0, 0, 10, 0]
                    size_hint: [0.25, 1]
                    Button:
                        text: 'Back'
                        bold: True
                        width: self.width
                        on_release: app.view_accounts()
                BoxLayout:
                    padding: [0, 0, 10, 0]
                    size_hint: [0.25, 1]
                    Button:
                        text: 'Refresh'
                        bold: True
                        width: self.width
                        on_release: root.refresh()
                BoxLayout:
                    size_hint: [0.5, 1]
                    Button:
                        text: 'Migrate New VM'
                        bold: True
                        width: self.width
