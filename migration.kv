        ListView:

            adapter: ListAdapter(data=root.data, cls=Factory.AccountListItem, args_converter=root.args_converter)

<AccountListItem>:
    height: '200sp'
    size_hint_y: None
    orientation: 'vertical'
    canvas:
        Color:
            rgba: [1,1,1,1]
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        padding: ['30dp', '20dp', '30dp', '20dp']
        size_hint: [1, 0.9]
        Label:
            text: root.account_name
            text_size: self.size
            font_size: '28sp'
            bold: True
            color: [0/255.0, 168/255.0, 28/255.0, 1]
            size_hint: [1, 0.2]

        BoxLayout:
            size_hint: [1, 0.46]
            orientation: 'vertical'
            Label:
                text: root.account_region
                text_size: self.size
                font_size: '20sp'
                bold: True
                color: [90/255.0, 90/255.0, 90/255.0, 1]
            Label:
                text: root.account_tenancy
                text_size: self.size
                color: [90/255.0, 90/255.0, 90/255.0, 1]

            Label:
                text: root.account_user
                text_size: self.size
                color: [90/255.0, 90/255.0, 90/255.0, 1]

        BoxLayout:
            padding: 0, 10, 0, 0
            size_hint: [1, 0.34]
            Button:
                text: 'Go to Account'
                bold: True
                on_release: root.account_details()
    BoxLayout:
        orientation: 'vertical'
        size_hint: [1, 0.1]
        canvas:
            Color:
                rgba: [240/255.0, 240/255.0, 240/255.0, 1]
            Rectangle:
                size: self.size
                pos: self.pos

<VMListItem>:
    vm_label: vm_label
    status_box: status_box
    height: '140sp'
    size_hint_y: None
    orientation: 'vertical'
    canvas:
        Color:
            rgba: [1,1,1,1]
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'horizontal'
        size_hint: [1, 0.9]
        padding: ['30dp', '20dp', '30dp', '20dp']
